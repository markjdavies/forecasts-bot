{
  "extends": ["eslint:recommended", "./eslint.json", "prettier"],
  "plugins": ["prettier", "@typescript-eslint/eslint-plugin"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "tabWidth": 4
      }
    ]
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  }
}
