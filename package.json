{
    "name": "forecasts-bot",
    "version": "1.4.1",
    "description": "Telegram bot, `LardsBot`, to handle reminders and score entry for Lard's Forecasts.",
    "main": "index.js",
    "scripts": {
        "build": "npm run lint && npm run build:ts",
        "now-build": "npm run lint",
        "build:ts": "npx tsc -p .",
        "format:ts": "prettier --loglevel silent --write \"client/**/*.ts\" \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint --cache --ext .ts .",
        "lint:fix": "npx eslint --fix --ext .ts ./src",
        "pretest": "npm run lint",
        "test": "npx jest",
        "test:coverage": "npm run build && npx jest --coverage",
        "test:coverage:local": "npm run test:coverage && rm -rf coverage",
        "posttest": "npm run format",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "format": "prettier --loglevel warn --write \"**/*.{ts,css,md}\"",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/markjdavies/forecasts-bot.git"
    },
    "author": "Mark Davies",
    "license": "MIT",
    "dependencies": {
        "@amaurym/now-middleware": "^0.2.2",
        "@vercel/node": "^1.12.1",
        "express": "^4.17.1",
        "fecha": "^4.2.1",
        "grammy": "^1.3.4",
        "mssql": "^7.2.1",
        "pino": "^7.0.5"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/mssql": "^7.1.4",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "coveralls": "^3.1.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^6.0.0",
        "jest": "^27.3.1",
        "jest-mock-extended": "^2.0.4",
        "lint-staged": "^10.5.4",
        "nyc": "^15.0.0",
        "prettier": "^2.3.2",
        "ts-jest": "^27.0.7",
        "typescript": "^4.2.4",
        "zod": "^3.7.1"
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix"
    }
}
