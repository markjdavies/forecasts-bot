{
  "name": "forecasts-bot",
  "version": "1.4.1",
  "description": "Telegram bot, `LardsBot`, to handle reminders and score entry for Lard's Forecasts.",
  "main": "index.js",
  "scripts": {
    "build": "npm run lint && npm run build:ts",
    "now-build": "npm run lint",
    "build:ts": "npx tsc -p .",
    "format:ts": "prettier --loglevel silent --write \"client/**/*.ts\" \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint . --cache --fix --ext .ts",
    "lint:fix": "npx eslint --fix --ext .ts ./src",
    "pretest": "npm run lint",
    "test": "npm run build && nyc --reporter=html --reporter=text ava --verbose --timeout=3000 ./test/*Tests.js",
    "posttest": "npm run format",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "npm run test && release-it",
    "format": "prettier --loglevel warn --write \"**/*.{ts,css,md}\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/markjdavies/forecasts-bot.git"
  },
  "author": "Mark Davies",
  "license": "MIT",
  "dependencies": {
    "@amaurym/now-middleware": "^0.2.2",
    "@vercel/node": "^1.12.1",
    "express": "^4.17.1",
    "fecha": "^4.2.1",
    "mssql": "^5.1.5",
    "node-telegram-bot-api": "^0.52.0",
    "pino": "^6.13.0",
    "telegraf-logger": "^3.0.0"
  },
  "devDependencies": {
    "@types/mssql": "^7.1.3",
    "@types/node-telegram-bot-api": "^0.51.4",
    "@types/pino": "^6.3.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "ava": "^3.15.0",
    "coveralls": "^3.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nyc": "^15.0.0",
    "prettier": "^2.3.2",
    "release-it": "^14.0.3",
    "telegraf-test": "^1.2.0",
    "typescript": "^4.2.4",
    "zod": "^3.7.1"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
